<?xml version="1.0" encoding="utf-8"?><!-- XML implementation of Card Layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_it_shade"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/yellow_post_it_dark"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/post_it_content"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/yellow_post_it"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>